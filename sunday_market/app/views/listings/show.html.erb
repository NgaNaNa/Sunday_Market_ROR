<h1> Show Listing </h1>

<p>
    <strong>Title:</strong>
    <%= @listing.title%>
</p>

<p>
    <strong>Description:</strong>
    <%= @listing.description%>
</p>

<p>
    <strong>Condition:</strong>
    <%= @listing.condition%>
</p>

<p>
    <strong>Category:</strong>
    <%= @listing.category.name%>
</p>

<p>
    <strong>Price:</strong>
    <%= @listing.price%>
</p>

<p>
    <strong>Owner:</strong>
    <%= @listing.user.email%>
</p>

<p>
    <% if @listing.image.attached? %>
        <%= image_tag @listing.image %>
    <% else %>
        <%= image_tag("listing_default.jpeg", alt: "Sunday Market Listing") %>
    <% end %>
</p>
<% if current_user && (current_user.id == @listing.user_id) %>
    <%= link_to "Edit", edit_listing_path(@listing) %>
<% end %>
<%= link_to "Back", listings_path %>